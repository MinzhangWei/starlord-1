.section-title {
  font-size: 28rpx;
  color: #999;
  margin: 12px 0 4px 12px;
}
.list {
  margin: 0;
}
.list-content {
  text-align: right;
}
.price-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  text-align: right;
}
.price-input {
  border: 1px solid #999;
  width: 120rpx;
  text-align: left;
  padding-left: 12rpx;
  padding-right: 12rpx;
  border-radius: 6px;
}
.price-label {
  padding: 0 4rpx;
}

.submit-wrap {
  flex-direction: row;
  box-sizing: border-box;
  display: flex;
  padding: 12px;
}
.submit-btn {
  flex: 1;
  margin:0 12px;
}

.auth-wrap {
  padding-top: 44px;
  margin: 0 24px;
  text-align: center;
}
.auth-message {
  padding-bottom: 24px;
}
