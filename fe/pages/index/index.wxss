.title {
  color: #BEBEBE;
  font-size: 14px;
  display: block;
  padding: 4px 12px;
}
.list {
  margin: 0;
}
.list-item {
  align-items: center;
}
.list-avatar {
  height: 44px;
  width: 44px;
  background: #3cc51f;
  color: #fff;
  display: flex;
  font-size: 18px;
  justify-content: center;
  align-items: center;
  margin-right: 12px;
  margin-left: 4px;
  border-radius: 2px;
}
.list-title {
  color: #333;
}
.list-info {
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  color: #666;
  font-size: 14px;
}
.list-division {
  height: 10px;
  width: 1px;
  border-left: 1px solid #BEBEBE;
  margin: 0 8px;
}
.list-warning {
  color: rgb(255, 85, 0);
  padding-left: 4px;
}
.group-avatar {
  height: 14px;
  width: 14px;
  margin: 0 4px 0 8px;
}
.intro-wrap {
  margin: 12px 16px;
}
.empty {
  text-align: center;
  background: #fff;
  padding: 32px 0;
}